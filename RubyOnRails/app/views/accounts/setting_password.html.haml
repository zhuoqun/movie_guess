.row.setting
  .span8
    = simple_form_for @user, :url => account_path(@user.id, :section => :password), :html => { :class => 'form-horizontal' } do |f|
      %fieldset
        = render 'shared/settings_tabs'
        - if flash[:notice].present?
          .alert.alert-success
            = flash[:notice]
        = f.input :current_password, :as => :password, :label => "#{t :current_password}", :required => true
        = f.input :password, :label => "#{t :new_password}"
        = f.input :password_confirmation, :label => "#{t :confirm_new_password}", :required => true
      .form-actions
        = f.button :submit, :class => 'btn-large btn-primary', :value => "#{t :save}"
