= simple_form_for @user, :url => accounts_path, :html => { :class => 'form-horizontal' } do |f|
  %fieldset
    %legend
      = t :signup
    = f.input :email, :label => "#{t :email}", :required => true
    = f.input :gender, :label => "#{t :gender}", :collection => [["#{t :female}", 0], ["#{t :male}", 1], ["#{t :secret}", -1]], :as => :radio_buttons, :item_wrapper_class => 'inline', :required => true
    = f.input :password, :label => "#{t :password}", :required => true
    = f.input :password_confirmation, :label => "#{t :password_confirmation}", :required => true
    = f.input :user_name, :label => "#{t :user_name}"
    -#= f.input :location_id, :label => "#{t :location}", :collection => Location.all.collect {|c| [c.name, c.id]}
    .form-actions
      = f.button :submit, :class => 'btn-large btn-primary', :value => "#{t :signup}"
