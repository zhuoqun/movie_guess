%script#answer_tpl{:type => "text/html"}
  :plain
    <li id="answer-{{ answer_id }}" class="clearfix {{ is_correct }}">
      <a class="avatar" href="{{ user_url }}">
        <img src="{{ user_avatar }}" width="50px" height="50px" />
      </a>
      <div class="answer-body">
        <a class="username" href="{{ user_url }}">{{ user_name }}</a>
        <p>{{ content }}</p>
        <div class="answer-actions">
          {{#is_my_puzzle}}
          <div class="top">
            <a class="js-mark-as-correct" href="#"> 标记为正确答案 </a>
            <a class="js-cancel-mark-as-correct" href="#"> 不是正确答案 </a>
          </div>
          {{/is_my_puzzle}}
          <div class="bot">
            <a class="js-upvote {{ voted_up }}" href="#">赞同({{ upvotes_cnt }})</a>
            <a class="js-downvote {{ voted_down }}" href="#">反对({{ downvotes_cnt }})</a>
            <a class="js-comment" href="#">评论({{ comment_cnt }})</a>
            <span class="timestamp"><a href="{{ answer_url }}">{{ timestamp }}</a></span>
          </div>
        </div>
      </div>
      <ul class="comments"></ul>
    </li>
